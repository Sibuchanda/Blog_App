<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blog</title>
</head>

<body>

    <%- include('./partials/navbar') %>

        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageURL %>" alt="img" width="700px">
            <pre class="mt-5"><%= blog.body %> </pre>
        </div>

        <!-- ========== Displying the author of blog ===============  -->
        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageUrl %>" width="50px">
            <%= blog.createdBy.fullname %>
        </div>

        <!-- =================== Adding comment section ================ -->

        <div class="container mt-5">
            <h2>Comments (<%=comments.length%>) </h2>

            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="POST">
                    <div class="mb-3">
                        <label for="comments" class="form-label">Add comments</label>
                        <input type="text" name="content" class="form-control" id="comments"
                            aria-describedby="emailHelp" placeholder="Enter your comment">
                    </div>
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            <% } %>

          <!-- //============= Displaying the existing comment ============ -->
          <div class="mt-5">

            <% comments.forEach(comment=> { %>
                <div>
                    <img src="<%= comment.createdBy.profileImageUrl %>" width="50px">
                    <%= comment.createdBy.fullname %> :
                    <pre><%= comment.content %></pre>
                </div>
                <% }) %>

        </div>


        </div>


        <%- include('./partials/scripts') %>
</body>

</html>