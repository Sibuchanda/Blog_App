<!DOCTYPE html>
<html lang="en">
<head>
     <%- include('./partials/head') %>
    <title>Add new Blog</title>
</head>
<body>   
<%- include('./partials/navbar') %> 


<div class="container">
  <form action="/blog" method="POST" enctype="multipart/form-data" class="blog-form">

      <div class="form-group">
          <label for="coverImage" class="form-label">Cover Image</label>
          <input type="file" class="form-input" id="coverImage" name="coverImageURL">
      </div>

      <div class="form-group">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-input" id="title" name="title">
      </div>

      <div class="form-group">
          <label for="body" class="form-label">Body</label>
          <textarea class="form-textarea" placeholder="Body of your blog..." id="body" name="body"></textarea>
      </div>

      <div class="form-group">
          <button class="form-button">Submit</button>
      </div>
  </form>
</div>

<%- include('./partials/scripts') %>  
</body>
</html>